<table class="table table-striped">
	<tr>
		<td>#</td>
		<td>Title</td>
		<td>Content</td>
		<td></td>
	</tr>
	<% @posts.each do |post| %>
		<tr>
			<td></td>
			<td><%= post.title %></td>
			<td><%= link_to post.content , admin_post_path(post) %></td>
			<td>
				<%= link_to 'Edit', edit_admin_post_path(post) %>
				<%= link_to 'Delete', admin_post_path(post), method: :delete, data: { confrim: "Are you sure?" } %>
			</td>
		</tr>
	<% end %>
</table>
<%= link_to 'New Post', new_admin_post_path %>