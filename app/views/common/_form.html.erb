<div class="form-group">
	<%= form_for @post do |f| %>
		<%= f.label :title, "Title" %>
		<%= f.text_field :title, class: 'form-control' %>
		<%= f.label :content, "Content" %>
		<%= f.text_area :content, class: 'form-control', rows: "6" %><br>
		<%= f.submit "Submit", class: 'btn btn-primary btn-md' %>
	<% end %>
</div>